<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btnRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="btnNum">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:backgroundTint">@color/ligtGrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">numberAction</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="btnOperators">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/cream</item>
        <item name="android:onClick">operationAction</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/almostBlack</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="btnEqual">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">equalsAction</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:layout_margin">5dp</item>
    </style>


</resources>